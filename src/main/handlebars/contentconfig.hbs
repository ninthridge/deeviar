<div class="row">
  <div class="col-xs-12">
    <div class="text-center">
      <h3>Content Configuration</h3>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12">
    <form id="contentconfigform" name="contentconfigform" role="form">
      <div class="form-group">
        <label for="provider">Provider</label>
        <select class="form-control" id="provider" name="provider">
          <option value="omdb">OMDb API</option>
        </select>
      </div>

      <div class="form-group">
        <label for="apiKey">API Key</label>
        <input type="text" class="form-control" id="apiKey" name="apiKey" placeholder="API Key" value="{{apiKey}}">
      </div>

      <button type="submit" class="btn btn-primary">Save</button>
    </form>
  </div>
</div>